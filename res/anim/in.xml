<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
	android:shareInterpolator="false">

	<scale android:fromXScale="1.0" android:toXScale="2.0"
		android:fromYScale="1.0" android:toYScale="2.0" android:fillAfter="false"
		android:duration="2000" android:pivotX="50%" android:pivotY="50%" />

	<translate android:fromYDelta="0" android:toYDelta="200"
		android:fromXDelta="0" android:toXDelta="50" android:duration="2000" />


	<set android:interpolator="@android:anim/accelerate_interpolator"
		android:startOffset="2000">

		<scale android:fromXScale="2.0" android:toXScale="0.2"
			android:fromYScale="2.0" android:toYScale="0.2" android:pivotX="50%"
			android:pivotY="50%" android:fillAfter="false" android:duration="2000" />

		<translate android:fromYDelta="200" android:toYDelta="0"
			android:fromXDelta="50" android:toXDelta="0" android:duration="2000" />
	</set>

	<set android:interpolator="@android:anim/accelerate_interpolator"
		android:startOffset="4000">

		<scale android:fromXScale="1.0" android:toXScale="4.0"
			android:fromYScale="1.0" android:toYScale="4.0" android:pivotX="50%"
			android:pivotY="50%" android:fillAfter="true" android:duration="2000" />




	</set>

</set>
